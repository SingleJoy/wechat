/* pages/button/button.wxss */
.container{
   width:100%;
  height:100%;
    padding: 0;
}
.content{
   width: 100%;
}

.content-list{
    margin-bottom: 20rpx;
    height: 200rpx;
}

.title-name{

     margin-left: 20rpx;
     text-align:left;
     font-size: 30rpx;
     color: #616161;
 }

.app-list{
    display: flex;
    flex-direction: row;
    margin-left: 120rpx;
}

.app-list>button{
    min-width: 160rpx;
    min-height:60rpx;
    margin: 10rpx;
    text-shadow: 0 1px 1px rgba(0,0,0,0.3);
    border-radius: 5px;
    text-align: center;
    line-height: 60rpx;
    white-space: pre-wrap;

}

.black{
    background-color: #000;
    color:#f3f4e9;
    border:1px solid #da7c0c;
}

.green{
    background-color: #3cb035;
    color:#f3f4e9;
    border:1px solid #3cb035;
}

.red{
    background-color: #ea2000;
    color:#f3f4e9;
    border:1px solid  #ea2000;
}
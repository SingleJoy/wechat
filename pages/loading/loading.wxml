
<view class="page">
    <view class="page-hd">
        <text class="page-title">loading组件</text>
    </view>


    <view class="page-bd">
        <view class="btn-area">
            <view class="body-view">
                <loading hidden="{{hidden}}" bindtap="loadingtap">加载中...，单击退出。</loading>
            </view>
            <button type="default" bindtap="loadingTap1">事件1 loading</button>
        </view>

        <view class="body-view">
            <loading hidden="{{hidden2}}">{{time}}后退出...</loading>
            <button type="default" bindtap="loadingTap2">定时loading</button>
        </view>

        <view class="btn-area">
            <view class="body-view">
               <button type="default" bindtap="showtoast1Tap">默认loading</button>
                <button type="default" bindtap="=showtoast2Tap">5秒后关闭loading</button>
                <button type="default" bindtap="showtoast3Tap">默认</button>
                <button type="default" bindtap="=showtoast4Tap">5秒后关闭</button>
            </view>

        </view>

    </view>

</view>